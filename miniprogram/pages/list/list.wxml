<view class="page-home">

    <view class="title">当前活动列表</view>
    <view class="home">
        <block wx:for="{{items}}" wx:key="*this" wx:for-index="idx" wx:for-item="exam">
            <view class="brand" bindtap="attendGo" data-id="{{exam._id}}" data-index= "{{exam.index}}" data-file="{{exam.path}}">
                <view class="sortnum">{{idx+1}}</view>
                <view class="name">{{exam.name}}</view>
                <view class="arraw">></view>
            </view>       
        </block>
    </view>
</view>