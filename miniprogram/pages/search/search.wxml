
<view class="not-importent result-count" wx:if="{{count>3}}">找到相关结果1个</view>
<view class="mpa-contents">
	<view wx:for="{{items}}" wx:key="_id">
		<navigator class="mpa-content padding-box flex-between" url="/pages/index/content?contentId={{item._id}}">
			<view class="mpa-content-target">
				<view class="mpa-content-content">
          <view><text>{{item._id}}</text></view>
          <view><text class="keyword">{{item.title}}</text>
          <text>{{item.answer}}</text></view>
        </view>
        <view class="content-remarks not-importent" wx:if="{{item.remarks.length}}">
          <view wx:for="{{item.remarks}}" wx:key="*this" class="no-wrap">
            <text>{{item}}</text>
          </view>
        </view>
			</view>
		</navigator>
	</view>
  <view wx:if="{{loaded && !items.length}}" class="empty-tip abs-center">
    <view class="abs-center-content not-importent">空空如也</view>
  </view>
</view>